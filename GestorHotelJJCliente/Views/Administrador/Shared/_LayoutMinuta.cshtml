<body>

    <header id="header" class="fixed-top">

        <center>
            <table id="tablaUsuariosCrearReunion" class="table table-striped table-bordered dt-responsive nowrap" style="width:80%">
                <thead>
                    <tr>
                        <th>

                            <div class="row">
                                @*<div class="col-lg-3 order-1 order-lg-1">
                                        <img src="~/assets/logo.png" width="50" height="50">
                                    </div>*@
                                <div class="col-lg-8 order-2 order-lg-2">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="logo mr-auto pl-3" style="font-size:130%;"> Legendary  Hotel </h5>
                                            </div>
                                            <div class="col">
                                                <h5 class="logo mr-auto pl-3" style="font-size:90%; color: #B7950B;"> Elegance & Comfort </h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </th>
                        <td>
                            <center>
                                <h5 class="display-6">
                                    Fecha:
                                    <script>
                                        var f = new Date();
                                        document.write(f.getDate() + "/" + (f.getMonth() + 1) + "/" + f.getFullYear());
                                    </script>

                                </h5>
                            </center>
                        </td>
                        <td>
                            <center>
                                <h5 class="display-6">
                                    Hora:
                                    <script>
                                        var f = new Date();
                                        document.write(f.getHours() + ":" + f.getMinutes() + ":" + f.getSeconds());
                                    </script>
                                </h5>
                            </center>
                        </td>
                    </tr>

                </thead>
            </table>
        </center>




    </header>



