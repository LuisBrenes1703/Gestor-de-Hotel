@{
    ViewData["Title"] = "CRUDHome";

    if (ViewBag.PermisoUsuario == "1")
    {
        Layout = "/Views/Administrador/Shared/_LayoutAdministrador.cshtml";


    }
    else if (ViewBag.PermisoUsuario == null)
    {
        <script>

            redireccion('/Usuario/MuestraLoginUsuario');

            function redireccion(direccion) {
                document.location.href = direccion;
            }


        </script>
    }
    else if (ViewBag.PermisoUsuario == "")
    {
        <script>
            redireccion('/Usuario/MuestraLoginUsuario');

            function redireccion(direccion) {
                document.location.href = direccion;
            }


        </script>
    }

}
<link rel="stylesheet" href="~/css/site.css" />
<body>
    <main id="main">
        <section id="about" class="about">
            <section id="specials" class="specials">

                <div class="row">

                    <div class="container col-12 col-md-10 order-1 order-lg-1" data-aos="fade-up">

                        <div class="row">

                            <div class="col-lg-12 order-1 order-lg-1" data-aos="zoom-in" data-aos-delay="100">
                                <div class="tab-content">
                                    @if (ViewBag.DireccionHotel != null)
                                    {

                                        @foreach (ComoLlegarAdminModel temp in ViewBag.DireccionHotel)
                                        {
                                            <form class="" asp-controller="ComoLlegarAdmin" asp-action="ModificarTextoComoLlegar">

                                                <div class="row">

                                                    <div class="col-lg-3 order-1  order-lg-1">
                                                    </div>

                                                    <div class="col-lg-8  order-2 order-lg-2">
                                                        <input type="text" name="TN_Id_Direccion" id="TN_Id_Direccion" class="dateselect1" value="@temp.TN_Id_Direccion" hidden />
                                                        <h3>Modificar descripción de como llegar</h3>
                                                        <textarea name="TC_Descripcion" id="TC_Descripcion" class="font-italic dateselect1" style="text-align: justify;" rows="8" cols="80">@temp.TC_Descripcion</textarea>
                                                        <br>
                                                        <br>

                                                        <h3>Modificar URL del mapa</h3>
                                                        <textarea name="TC_LinkGoogleMaps" id="TC_LinkGoogleMaps" class="font-italic dateselect1" style="text-align: justify;" rows="8" cols="80">@temp.TC_LinkGoogleMaps</textarea>
                                                        <br>
                                                        <br>
                                                        <br>
                                                        <br>

                                                    </div>

                                                    <div class="col-lg-2 order-3  order-lg-3">
                                                    </div>


                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-2  order-1 order-lg-1">
                                                    </div>

                                                    <div class="col-lg-7 text-center order-2 order-lg-2">
                                                        <div class="row">
                                                            <div class="col-lg-1  order-1 order-lg-1">
                                                            </div>
                                                            <div class="col-lg-4  order-1 order-lg-1">
                                                                <button class="botones" type="submit">Modificar</button>
                                                            </div>
                                                            <div class="col-lg-2  order-2 order-lg-2">
                                                                <button class="botones" type="button" onclick="CancelarModificarHome()">Cancelar </button>
                                                            </div>
                                                        </div>


                                                        @if (ViewBag.Valido != null)
                                                        {
                                                            <div class="alert alert-warning mt-3" id="al1" role="alert" style="display: block; text-align:center">
                                                                @Model
                                                                <h6 style="color:black;"> @ViewBag.Valido</h6>
                                                            </div>
                                                            <br>
                                                        }


                                                    </div>

                                            </form>

                                        }

                                    }
                                </div>


                            </div>

                            <div class="col-lg-1 order-lg-4">

                            </div>
                        </div>
                    </div>
                </div>
            </section><!-- End Specials Section -->
        </section>
    </main>

    <div id="preloader"></div>
    <a href="#" class="back-to-top"><i class="bx bx-up-arrow-alt"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Bootstrap/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Bootstrap/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Bootstrap/assets/js/main.js"></script>
</body>
