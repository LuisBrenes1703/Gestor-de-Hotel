@{
    ViewData["Title"] = "CRUDHome";

    if (ViewBag.PermisoUsuario == "1")
    {
        Layout = "/Views/Administrador/Shared/_LayoutAdministrador.cshtml";


    }
    else if (ViewBag.PermisoUsuario == null)
    {
        <script>

            redireccion('/Usuario/MuestraLoginUsuario');

            function redireccion(direccion) {
                document.location.href = direccion;
            }


        </script>
    }
    else if (ViewBag.PermisoUsuario == "")
    {
        <script>
            redireccion('/Usuario/MuestraLoginUsuario');

            function redireccion(direccion) {
                document.location.href = direccion;
            }


        </script>
    }

}
<link rel="stylesheet" href="~/css/site.css" />
<body>
    <main id="main">     
        <section id="about" class="about">
            <section id="specials" class="specials">

                <div class="row">

                    <div class="container col-12 col-md-10 order-1 order-lg-1" data-aos="fade-up">

                        <div class="row">

                            <div class="col-lg-12 order-1 order-lg-1" data-aos="zoom-in" data-aos-delay="100">
                                <div class="tab-content">
                                    @if (ViewBag.InicioHotel != null)
                                    {

                                        @foreach (HotelAdminModel temp in ViewBag.InicioHotel)
                                        {
                                            <form class="" asp-controller="HomeAdmin" asp-action="ModificarTextoHome" enctype="multipart/form-data">

                                                <div class="row">

                                                    <div class="col-lg-3 order-1  order-lg-1">
                                                    </div>

                                                    <div class="col-lg-8  order-2 order-lg-2">
                                                        <input type="text" name="TN_Id_Hotel" id="TN_Id_Hotel" class="dateselect1" value="@temp.TN_Id_Hotel" hidden />
                                                        <h3>Modificar descripción de Home</h3>
                                                        <textarea name="TC_Inicio" id="TC_Inicio" class="font-italic dateselect1" style="text-align: justify;" rows="8" cols="80">@temp.TC_Inicio</textarea>
                                                        <br>
                                                        <br>
                                                        <br>

                                                        <img src="@temp.TC_URL_IMG" width="400" height="300">
                                                        <h3>Agregar una nueva imagen</h3>
                                                        @*<input type="text" name="TC_URL_IMG" id="TC_URL_IMG" class="dateselect1" required="required" />
        <button class="btn btn-warning btn-lg mb30" type="submit" onclick="BuscarNuevaImagen()">Buscar </button>*@

                                                    

                                                        <div content="width=device-widt" class="row">
                                                            <div class="form-group col-sm-12">
                                                                <input class="dateselect1" type="file" id="imagenHome" name="imagenHome">

                                                            </div>
                                                        </div>


                                                    </div>

                                                    <div class="col-lg-2 order-3  order-lg-3">
                                                    </div>


                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-7  order-1 order-lg-1">
                                                    </div>

                                                    <div class="col-lg-5 text-center order-2 order-lg-2">
                                                        
                                                        <button class="botones" type="submit">Aceptar</button>
                                                        <button class="botones" type="button" onclick="CancelarModificarHome()">Cancelar </button>
                                                        @if (ViewBag.Valido != null)
                                                        {
                                                            <div class="alert alert-warning mt-3" id="al1" role="alert" style="display: block; text-align:center">
                                                                @Model
                                                                <h6 style="color:black;"> @ViewBag.Valido</h6>
                                                            </div>
                                                            <br>
                                                        }
                                                    </div>                                                  

                                                </div>

                                            </form>

                                        }

                                    }
                                </div>


                            </div>

                            <div class="col-lg-1 order-lg-4">

                            </div>
                        </div>
                    </div>
                </div>
            </section><!-- End Specials Section -->
        </section>
    </main>

    <div id="preloader"></div>
    <a href="#" class="back-to-top"><i class="bx bx-up-arrow-alt"></i></a>

