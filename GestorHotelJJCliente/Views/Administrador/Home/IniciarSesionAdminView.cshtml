@{
    ViewData["Title"] = "IniciarSesionAdminView";
    Layout = "_Layout";
}

<body>

    <main id="main">

        <!-- ======= About Section ======= -->
        <section id="about" class="about">
            <section id="book-a-table" class="book-a-table">

                <div class="container col-12 col-md-10 order-1 order-lg-2" data-aos="fade-up" style="margin-top: 125px">
                    <div class="tab-content">
                        <div class="form-row">

                            <div class="col-lg-2 order-1  order-lg-1"></div>


                            <div class="col-lg-8 pt-4 pt-lg-0  order-2 order-lg-2 content text-center php-email-form">

                                <div class="section-title">

                                    <p>Iniciar Sesión</p>


                                </div>


                                <form asp-controller="Usuario" asp-action="LoginUsuario" method="POST">


                                    <div class="col-lg-6 col-md-6 form-group" style="text-align:center; margin: 0 auto;">
                                        <input type="text" class="form-control" name="TC_Usuario" id="TC_Usuario" placeholder="Usuario">
                                        <div class="validate"></div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 form-group" style="text-align:center; margin: 0 auto;">
                                        <input type="password" class="form-control" name="TC_Contrasenna" id="TC_Contrasenna" placeholder="Contraseña">
                                        <div class="validate"></div>
                                    </div>
                       


                                        <br>
                                        @if (ViewBag.ERROR != null)
                                        {
                                            <div class="alert alert-danger" id="al1" role="alert" style="display: block; text-align:center">
                                                @Model
                                                <h6 name="errorCredenciales"> <img src="https://pic.sopili.net/pub/emoji/twitter/2/72x72/26a0.png" width=20 height=20> @ViewBag.ERROR</h6>
                                            </div>
                                            <br>
                                        }
                                        <div style="text-align:center; margin: 0 auto;">
                                            <button type="submit">Aceptar</button>
                                            <div class="validate"></div>
                                        </div>


                                </form>


                            </div>



                            <div class="col-lg-2 order-3  order-lg-3"> </div>


                        </div>
                    </div>

                </div>

            </section>
        </section>



        <div id="preloader"></div>
        <a href="#" class="back-to-top"><i class="bx bx-up-arrow-alt"></i></a>

        <!-- Vendor JS Files -->
        <script src="~/Bootstrap/assets/vendor/jquery/jquery.min.js"></script>
        <script src="~/Bootstrap/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Bootstrap/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
        <script src="~/Bootstrap/assets/vendor/php-email-form/validate.js"></script>
        <script src="~/Bootstrap/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
        <script src="~/Bootstrap/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
        <script src="~/Bootstrap/assets/vendor/venobox/venobox.min.js"></script>
        <script src="~/Bootstrap/assets/vendor/aos/aos.js"></script>

        <!-- Template Main JS File -->
        <script src="~/Bootstrap/assets/js/main.js"></script>

    </main>
</body>