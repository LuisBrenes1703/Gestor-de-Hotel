<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestorHotelJJCliente</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/icoHotelAmarillo2.ico" />


    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Restaurantly Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    @*<link href="~/Bootstrap/assets/img/favicon.png" rel="icon">*@
    @*<link href="~/Bootstrap/assets/img/apple-touch-icon.png" rel="apple-touch-icon">*@

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Bootstrap/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Bootstrap/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/Bootstrap/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Bootstrap/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Bootstrap/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Bootstrap/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/Bootstrap/assets/vendor/aos/aos.css" rel="stylesheet">



    @*  *@

    <!-- Template Main CSS File -->
    <link href="~/Bootstrap/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: Restaurantly - v1.2.1
    * Template URL: https://bootstrapmade.com/restaurantly-restaurant-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>
    
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">



            <img src="~/assets/logo.png" width="50" height="50">

            <div class="container">
                <div class="row">
                    <div class="col"><h5 class="logo mr-auto pl-3" style="font-size:110%;"> Legendary  Hotel </h5></div>
                    <div class="col"><h5 class="logo mr-auto pl-3" style="font-size:80%; color: #B7950B;"> Elegance & Comfort </h5></div>
                </div>
            </div>
            
            <nav id="navbar"  class="nav-menu d-none d-lg-block">
                <ul>
                    <li class="active">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li><a asp-area="" asp-controller="Hotel" asp-action="VerSobreNosotrosClientesView">Sobre Nosotros</a></li>
                    <li><a asp-area="" asp-controller="Facilidad" asp-action="VerFacilidadClienteView">Facilidades</a></li>
                    <li><a asp-area="" asp-controller="Hotel" asp-action="VerComoLlegarClientesView">Como llegar?</a></li>
                    <li><a asp-area="" asp-controller="TipoHabitacion" asp-action="VerTarifasClienteView">Tarifas </a></li>
                    <li><a asp-area="" asp-controller="Reservacion" asp-action="BuscarDisponibilidadView">Reservar en Linea </a></li>
                    <li><a asp-area="" asp-controller="Hotel" asp-action="VerContactenosClientesView">Contactenos </a></li>
                    <li><a asp-area="" asp-controller="Usuario" asp-action="MuestraLoginUsuario">Iniciar Sesión </a></li>

                </ul>
            </nav>

        </div>
    </header>
    <!-- End Header -->




    <main role="main" class="pb-3">
        @RenderBody()

    </main>


    <footer class="border-top footer text-center">
        <div class="container">
            <p class="font-italic"><a asp-area="" asp-controller="Home" asp-action="Index">Legendary Hotel Elegance & Comfort</a></p>
            &copy; 2021
        </div>
    </footer>

    <script src="~/Bootstrap/assets/vendor/aos/aos.js"></script>
    <script src="~/Bootstrap/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Bootstrap/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Bootstrap/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Bootstrap/assets/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
